<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d50000</item>
        <item name="colorPrimaryDark">#9b0000</item>
        <item name="colorAccent">#ff5131</item>
    </style>


    <!-- Style for a header TextView. -->
    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#333366</item>
    </style>

    <!-- Title body text -->
    <style name="TitleBodyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <!-- Question titles -->
    <style name="QuestionTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#78909C</item>
    </style>

    <!-- Question body text -->
    <style name="QuestionBodyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <!-- Radio buttons -->
    <style name="RadioAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333366</item>
    </style>

    <!-- Division lines -->
    <style name="DivisionLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#9b0000</item>
    </style>

</resources>